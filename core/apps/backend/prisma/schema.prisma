// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Profile model for backend authentication
model UserProfile {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?   // Hashed password for backend auth (nullable for OAuth users)
  firstName     String?   @map("first_name")
  lastName      String?   @map("last_name")
  avatarUrl     String?   @map("avatar_url")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Relations
  workspace_members WorkspaceMember[]
  oauth_accounts OAuthAccount[]
  
  @@map("user_profiles")
}

// OAuth Account model for external authentication providers
model OAuthAccount {
  id            String    @id @default(cuid())
  provider      String    // 'google', 'github', etc.
  providerId    String    @map("provider_id") // External provider's user ID
  userId        String    @map("user_id") // References user_profiles.id
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Relations
  user          UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerId])
  @@map("oauth_accounts")
}

model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  members WorkspaceMember[]
  salesOrders SalesOrder[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  userId      String   @map("user_id") // References user_profiles.id
  workspaceId String   @map("workspace_id")
  role        String   @default("member") // owner, admin, member
  joinedAt    DateTime @default(now()) @map("joined_at")

  // Relations
  workspace Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      UserProfile  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@map("workspace_members")
}

// Module management (like Odoo's module registry)
model Module {
  id          String   @id @default(cuid())
  moduleId    String   @unique @map("module_id") // Module folder name
  name        String
  version     String
  category    String?
  enabled     Boolean  @default(false)
  installed   Boolean  @default(false)
  installedAt DateTime? @map("installed_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("modules")
}

// Sales Order model (from sales-order module)
model SalesOrder {
  id          String   @id @default(cuid())
  orderNumber String   @unique @map("order_number")
  customer    String
  amount      Decimal  @db.Decimal(10, 2)
  status      String   @default("pending") // pending, processing, completed
  date        DateTime @default(now())
  workspaceId String   @map("workspace_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@map("sales_orders")
}