{
  "name": "wongsa-core",
  "version": "1.0.0",
  "description": "Wongsa Core - A modern SAAS platform",
  "private": true,
  "scripts": {
    "dev": "pnpm run kill:ports && pnpm run dev:core",
    "kill:ports": "lsof -ti:3000,3001 | xargs kill -9 2>/dev/null || true",
    "dev:core": "sleep 1 && turbo run dev --parallel",
    "dev:core:backend": "cd core/apps/backend && pnpm run start:dev",
    "dev:core:frontend": "cd core/apps/frontend && pnpm run dev",
    "build": "turbo run build",
    "build:core": "turbo run build --filter='./core/**'",
    "build:core:backend": "cd core/apps/backend && pnpm run build",
    "build:core:frontend": "cd core/apps/frontend && pnpm run build",
    "start": "pnpm run start:core",
    "start:core": "turbo run start --parallel",
    "start:core:backend": "cd core/apps/backend && pnpm run start:prod",
    "start:core:frontend": "cd core/apps/frontend && pnpm run start",
    "db:generate": "cd core/apps/backend && pnpm run db:generate",
    "db:push": "cd core/apps/backend && pnpm run db:push",
    "db:migrate": "cd core/apps/backend && pnpm run db:migrate",
    "db:studio": "cd core/apps/backend && pnpm run db:studio",
    "db:seed": "cd core/apps/backend && pnpm run db:seed",
    "lint": "turbo run lint",
    "lint:core": "turbo run lint --filter='./core/**'",
    "lint:core:backend": "cd core/apps/backend && pnpm run lint",
    "lint:core:frontend": "cd core/apps/frontend && pnpm run lint",
    "type-check": "turbo run type-check",
    "type-check:core": "turbo run type-check --filter='./core/**'",
    "clean": "turbo run clean && rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^2.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
